#!/usr/bin/env bash

echo 'ðŸ”¥ Dropping old .venv'
rm -rf .venv
rm -rf profile_office

echo 'ðŸ“ª Creating venv'
python3 -m venv .venv

echo 'ðŸ“« Starting the environment'
source .venv/bin/activate

echo 'ðŸ“¦ Installing requirements'
pip install --quiet -r requirements.txt

echo 'ðŸ Starting IPython'
ipython profile create office --ipython-dir=.
cat .config.py >> profile_office/ipython_config.py
ipython --profile=office --ipython-dir=.
